{
  "manifest_version": 3,
  "name": "History Whitelist Manager",
  "version": "1.0",
  "description": "Whitelist domains (with regex) to record history. All other domains are ignored.",
  "permissions": [
    "history",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 